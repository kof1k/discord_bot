[Unit]
Description=Discord Music Bot
After=network.target postgresql.service

[Service]
Type=simple
User=YOUR_USER
WorkingDirectory=/home/YOUR_USER/discord_bot
Environment="NODE_ENV=production"
EnvironmentFile=/home/YOUR_USER/discord_bot/.env
ExecStart=/usr/bin/node /home/YOUR_USER/discord_bot/index.js
Restart=always
RestartSec=10
StandardOutput=append:/var/music_bot/logs/discord-bot.log
StandardError=append:/var/music_bot/logs/discord-bot-error.log

# Security
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=read-only
ReadWritePaths=/var/music_bot

[Install]
WantedBy=multi-user.target
